#!/usr/bin/env bash


if [ "$1" = "google" ]; then
    dns1=8.8.8.8;
    dns2=8.8.4.4;
elif [ "$1" = "opennic" ]; then
    dns1=107.150.40.234;
    dns2=50.116.23.211;
elif [ "$1" = "default" ]; then
    resolvconf -u;
    exit;
else
    echo "usage: $0 <googe|opennic|default>";
    exit;
fi

echo "nameserver $dns1
nameserver $dns2" > /etc/resolv.conf
